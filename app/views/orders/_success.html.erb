<h3>Order Confirmation</h3>
<div class="order-confirmation">
  <ul>
    <li>Name: <%= @checkout.amount %></li>
    <li>Email: <%= @checkout.email %></li>
    <li>Amount: <%= @checkout.amount %></li>
    <li>Address 1: <%= @address.address_line_1 %></li>
    <li>Address 2: <%= @address.address_line_2 %></li>
    <li>City: <%= @address.city %></li>
    <li>State: <%= @address.state %></li>
    <li>Zip Code: <%= @address.zip_code %></li>
  </ul>
  <%= link_to 'Pay', @checkout.checkout_url, target: '_blank', class: "btn btn-primary" %>
</div>